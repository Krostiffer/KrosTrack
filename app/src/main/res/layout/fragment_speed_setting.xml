<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpeedSetting">



    <NumberPicker
        android:id="@+id/leftPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/middlePicker"
        app:layout_constraintEnd_toStartOf="@+id/middlePicker"
        app:layout_constraintTop_toTopOf="@+id/middlePicker" />

    <NumberPicker
        android:id="@+id/rightPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/middlePicker"
        app:layout_constraintStart_toEndOf="@+id/middlePicker"
        app:layout_constraintTop_toTopOf="@+id/middlePicker" />

    <NumberPicker
        android:id="@+id/middlePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seperatorSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/middlePicker"
        app:layout_constraintEnd_toStartOf="@+id/middlePicker"
        app:layout_constraintStart_toEndOf="@+id/leftPicker"
        app:layout_constraintTop_toTopOf="@+id/middlePicker" />

    <TextView
        android:id="@+id/seperatorSymbol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=","
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/middlePicker"
        app:layout_constraintEnd_toStartOf="@+id/middlePicker"
        app:layout_constraintStart_toEndOf="@+id/leftPicker"
        app:layout_constraintTop_toTopOf="@+id/middlePicker" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/run_vs_time"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/middlePicker"
        app:layout_constraintEnd_toEndOf="@+id/middlePicker"
        app:layout_constraintStart_toStartOf="@+id/middlePicker" />


</androidx.constraintlayout.widget.ConstraintLayout>